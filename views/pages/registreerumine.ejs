<body>
    <div class="paisSektsioon">
        <div class="container">
            <%- include("../partials/menyy.ejs") %>

            <h1>Registreeru matkale <%= matk.nimetus %></h1>
            <img class="registreerumine-pilt" src="<%= matk.pildiURL %>" alt="">
            <p>
                <%= matk.kirjeldus %>
            </p>
        <div class="row">
                    <form action="/kinnitus/<%= matk.id %>">
                        <div>
                            <label for="nimi">Nimi</label>
                            <input type="text" name="nimi" placeholder="Nimi" id="nimi">
                        </div>
                        <div>
                            <label for="email">Email</label>
                            <input type="text" name="email" placeholder="Email" id="email">
                        </div>
                        <div>
                            <textarea name="teade" id="teade" cols="35" rows="8" placeholder="Teade"></textarea>
                            <button onclick="kontakt()">Saada</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="kontakt.js"></script>
</body>

</html>